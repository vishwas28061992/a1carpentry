@model A1Carpentry.Models.UsersModel
@{
    ViewBag.Title = "NumberofToolnames";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <style>
        html {
            box-sizing: border-box;
            font-family: sans-serif;
            line-height: 1.15;
            -webkit-text-size-adjust: 100%;
            -ms-text-size-adjust: 100%;
            -ms-overflow-style: scrollbar
        }

        *,
        ::after,
        ::before {
            box-sizing: border-box !important
        }
    </style>
</head>
<body data-sa-theme="1">
    <section class="content">
        <header class="content__title">
            <h1>Tools Details</h1>
        </header>
        <div class="statbox widget box box-shadow">
            <div class="widget-content widget-content-area">
                <div class="table-responsive mb-4">
                    <table id="data-table" class="table style-2 table-bordered  table-hover">
                        <thead>
                            <tr>
                                <th>Tool Names</th>
                                <th>Inventry Numbers </th>
                                <th>Serial Number</th>
                                <th>Type</th>
                                <th>Taken Date</th>
                                <th>Return Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Tools)
                            {
                            <tr>

                                <td>@item.ToolName</td>
                                <td>@item.InventryNumber</td>
                                <td>@item.ToolSerialNumber</td>
                                <td>@item.ToolType</td>
                                <td>@Model.CreatedOn</td>
                                @if (Model.ImagePath == "01-01-0001 00:00:00")
                                {
                                    <td>Tools Not Returned</td>
                                }
                                else
                                {
                                    <td>@Model.RetunDate</td>
                                }
                                @*<td>@Model.RetunDate</td>*@
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

